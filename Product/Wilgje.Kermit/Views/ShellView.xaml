<Window x:Class="Willow.Kermit.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top" LastChildFill="True" Height="64">
            <ContentControl Name="Navigation" DockPanel.Dock="Left"/>
            <ContentControl Name="Search" DockPanel.Dock="Right" />            
        </DockPanel>
        <DockPanel DockPanel.Dock="Left" LastChildFill="True" Width="200">
            <ContentControl Name="Art"/>
        </DockPanel>
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Top">
                <ContentControl Name="Status" MinWidth="400" Height="40"/>
            </DockPanel>
            <TabControl Name="ActionTabs" Margin="-40,0,0,0" MinHeight="300" TabStripPlacement="Left"/>
        </DockPanel>
    </DockPanel>
</Window>
