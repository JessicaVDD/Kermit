<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="KermitBrush_Color_Right">Black</Color>
    <Color x:Key="KermitBrush_Color_Left">DarkGray</Color>
    
    <LinearGradientBrush x:Key="KermitBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStopCollection>
            <GradientStop Color="{StaticResource KermitBrush_Color_Left}" Offset="0"/>
            <GradientStop Color="{DynamicResource KermitBrush_Color_Left}" Offset="0.5"/>
            <GradientStop Color="{StaticResource KermitBrush_Color_Right}" Offset="1"/>
        </GradientStopCollection>
    </LinearGradientBrush>
</ResourceDictionary>