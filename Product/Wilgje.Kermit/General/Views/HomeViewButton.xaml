<UserControl x:Class="Willow.Kermit.General.Views.HomeViewButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Button Margin="8" Padding="5">
        <Button.Content>
            <DockPanel LastChildFill="True">
                <TextBlock Name="ButtonCaption" Text="Nieuw" FontFamily="Andy" FontSize="20" VerticalAlignment="Top" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="3"/>
                <Image Name="ImageSource" Margin="5" Stretch="Uniform" />
            </DockPanel>
        </Button.Content>
    </Button>
</UserControl>
